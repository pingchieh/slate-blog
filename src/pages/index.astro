const posts = [...postCollection]
  .sort((a, b) => b.data.pubDate!.getTime() - a.data.pubDate!.getTime())
  .map((post) => ({
    id: post.id,
    slug: post.slug,
    url: `/blog/${post.slug}`,
    data: post.data,
  }));
---

<PageLayout>
  <section class="relative mb-16">
    <h3 class="text-slate12 text-[40px] leading-tight font-semibold">
      {slateConfig.title}
    </h3>
    <p class="text-slate10 text-xl">{slateConfig.description}</p>
    <Search
      client:only="react"
      className="absolute top-1/2 right-0 -translate-y-1/2"
    />
  </section>

  <section class="mb-16">
    <div class="text-slate12 text-base">
      {
        posts.map((item) => (
          <a
            class="active:bg-slate4 sm:hover:bg-slate3 flex cursor-pointer flex-col justify-between rounded-lg py-2.5 transition-all active:scale-[0.995] sm:flex-row sm:items-center sm:px-2"
            href={item.url}
            title={item.data.title}
          >
            <span class="shrink-0">{item.data.title}</span>
            <span class="border-slate6 mx-8 hidden h-px w-full grow border-t border-dashed sm:flex" />
            <span class="text-slate8 shrink-0">
              {item.data.pubDate?.toLocaleDateString(
                slateConfig?.lang || 'en-US',
                {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                },
              )}
            </span>
          </a>
        ))
      }
    </div>
